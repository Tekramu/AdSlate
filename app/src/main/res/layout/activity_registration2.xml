<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.adslate.activities.Registration1"
    android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/purple"
                android:padding="@dimen/image_padding">

                <ImageView
                    android:id = "@+id/xIvBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src = "@drawable/ic_ad_slate_action_bar_back_black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/xIvBack"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/text_margin_left"
                    android:text = "Register"
                    android:textColor="@color/white"
                    android:textSize="@dimen/header_text"
                    android:textStyle="bold"/>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/skip_margin"
                android:layout_marginRight="@dimen/skip_margin"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text = "Profile Picture"
                        android:textColor="@color/orange"
                        android:layout_marginTop="@dimen/skip_margin"
                        android:textSize="@dimen/registration_text_size"/>


                    <com.adslate.helperclasses.RoundedImageView
                        android:id = "@+id/xRIvProfilePic"
                        android:layout_width="@dimen/profile_image_width"
                        android:layout_height="@dimen/profile_image_height"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/skip_margin"
                        android:background="@drawable/img_thumbnail"/>

                </LinearLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/xTLayFullName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/flaotingtext"
                        android:paddingBottom="@dimen/skip_margin">

                        <EditText
                            android:id ="@+id/xEtFullName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint = "FullName"
                            android:padding="@dimen/margin_small"
                            android:singleLine="true"
                            android:textSize="@dimen/registration_text_size"
                            android:background="@drawable/edittext" />

                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/xTLayEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/flaotingtext"
                        android:paddingBottom="@dimen/skip_margin">

                        <EditText
                            android:id ="@+id/xEtEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint = "Email"
                            android:padding="@dimen/margin_small"
                            android:singleLine="true"
                            android:textSize="@dimen/registration_text_size"
                            android:background="@drawable/edittext" />

                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/xTLayPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/flaotingtext"
                        android:paddingBottom="@dimen/skip_margin">

                        <EditText
                            android:id ="@+id/xEtPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint = "Password"
                            android:padding="@dimen/margin_small"
                            android:singleLine="true"
                            android:inputType="textPassword"
                            android:textSize="@dimen/registration_text_size"
                            android:background="@drawable/edittext" />

                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/xTLayAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/flaotingtext"
                        android:paddingBottom="@dimen/skip_margin">

                        <EditText
                            android:id ="@+id/xEtAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint = "Address"
                            android:padding="@dimen/margin_small"
                            android:inputType="textMultiLine"
                            android:textSize="@dimen/registration_text_size"
                            android:background="@drawable/edittext" />

                    </android.support.design.widget.TextInputLayout>




                <LinearLayout
                    android:id = "@+id/xLinLayIndv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                <TextView
                    android:id ="@+id/xTvDOBTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text = "Date of Birth"
                    android:textSize="@dimen/registration_text_size"
                    android:layout_marginLeft="@dimen/margin_small"/>


                                <TextView
                                    android:id ="@+id/xTvDOB"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:textSize="@dimen/header_text"
                                    android:textColor="@color/black"
                                    android:background="@drawable/edittext" />


                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/xTLayPhNum"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:hintTextAppearance="@style/flaotingtext"
                                android:paddingBottom="@dimen/skip_margin"
                                android:paddingTop="@dimen/skip_margin">

                                <EditText
                                    android:id ="@+id/xEtPhNum"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint = "Phone Number"
                                    android:padding="@dimen/margin_small"
                                    android:singleLine="true"
                                    android:inputType="number"
                                    android:textSize="@dimen/registration_text_size"
                                    android:background="@drawable/edittext" />

                            </android.support.design.widget.TextInputLayout>

                    </LinearLayout>




                <LinearLayout
                    android:id = "@+id/xLinLayEnt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id ="@+id/xEtOrgTypeTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text = "Organization Type"
                        android:textSize="@dimen/registration_text_size" />



                            <TextView
                                android:id ="@+id/xTvOrgType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/header_text"
                                android:background="@drawable/edittext"
                                android:textColor="@color/black"
                                android:layout_marginBottom="@dimen/skip_margin"/>



                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/xTLayOrgTypeOdrs"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:hintTextAppearance="@style/flaotingtext"
                                android:paddingBottom="@dimen/skip_margin">

                                <EditText
                                    android:id ="@+id/xEtOrgTypeOdrs"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/margin_small"
                                    android:singleLine="true"
                                    android:hint = "Organization Type Others"
                                    android:textSize="@dimen/registration_text_size"
                                    android:background="@drawable/edittext" />

                            </android.support.design.widget.TextInputLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text= "Organization Description"
                        android:textSize="@dimen/registration_text_size" />




                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/xTLayOrgDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:counterEnabled="true"
                            app:counterMaxLength="140"
                            app:counterTextAppearance="@style/counterText"
                            app:hintTextAppearance="@style/flaotingtext">

                            <EditText
                                android:id ="@+id/xEtOrgDesc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/margin_small"
                                android:inputType="textMultiLine"
                                android:textSize="@dimen/header_text"
                                android:maxLength="140"
                                android:background="@drawable/descbackground"
                                android:minLines="5"
                                android:gravity="top"
                                android:lineSpacingExtra="10dp"/>

                        </android.support.design.widget.TextInputLayout>


                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/xTLayOrgTurnOvr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintTextAppearance="@style/flaotingtext"
                            android:paddingBottom="@dimen/skip_margin">

                            <EditText
                                android:id ="@+id/xEtOrgTurnOvr"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint = "Organization TurnOver"
                                android:padding="@dimen/margin_small"
                                android:singleLine="true"
                                android:inputType="number"
                                android:textSize="@dimen/registration_text_size"
                                android:background="@drawable/edittext" />

                        </android.support.design.widget.TextInputLayout>



                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/xTLayCntPersnName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintTextAppearance="@style/flaotingtext"
                            android:paddingBottom="@dimen/skip_margin">

                            <EditText
                                android:id ="@+id/xEtCntPersnName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint = "Contact PersonName"
                                android:padding="@dimen/margin_small"
                                android:singleLine="true"
                                android:textSize="@dimen/registration_text_size"
                                android:background="@drawable/edittext" />

                        </android.support.design.widget.TextInputLayout>



                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/xTLayCntPersnDesgntn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintTextAppearance="@style/flaotingtext"
                            android:paddingBottom="@dimen/skip_margin">

                            <EditText
                                android:id ="@+id/xEtCntPersnDesgntn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint = "Contact PersonDesignation"
                                android:padding="@dimen/margin_small"
                                android:singleLine="true"
                                android:textSize="@dimen/registration_text_size"
                                android:background="@drawable/edittext" />

                        </android.support.design.widget.TextInputLayout>



                    <TextView
                        android:id ="@+id/xTvBusinessCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_small"
                        android:text = "Upload BusinessCard"
                        android:textSize="@dimen/registration_text_size" />


                    <ImageView
                        android:id ="@+id/xTvBusinessCardImage"
                        android:layout_width="@dimen/cell_width"
                        android:layout_height="@dimen/cell_width"
                        android:padding="@dimen/margin_small"
                        android:paddingBottom="@dimen/skip_margin"/>



                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/xTLayCntPerPhNum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintTextAppearance="@style/flaotingtext"
                            android:paddingBottom="@dimen/skip_margin">

                            <EditText
                                android:id ="@+id/xEtCntPersnPhNum"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint = "Contact PersonPhoneNumber"
                                android:padding="@dimen/margin_small"
                                android:singleLine="true"
                                android:inputType="number"
                                android:textSize="@dimen/registration_text_size"
                                android:background="@drawable/edittext" />

                        </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >


                        <TextView
                            android:id = "@+id/xTvText1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text = "We will never post anything without your permission"
                            android:textSize="@dimen/registration_text_size"
                            android:layout_margin="@dimen/margin_small" />


                        <TextView
                            android:id = "@+id/xTvText2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text = "By signing up you are agreeing with AdSlate"
                            android:textSize="@dimen/registration_text_size"
                            android:layout_margin="@dimen/margin_small" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">


                            <CheckBox
                                android:id = "@+id/xCheckBoxTermsCondition"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/margin_small"
                                android:button="@drawable/checkbox_selector"/>


                            <TextView
                                android:id = "@+id/xTvTerms"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text = "Terms of Service "
                                android:textSize="@dimen/registration_text_size"
                                android:textColor="@color/orange"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text = " and "
                                android:textSize="@dimen/registration_text_size"
                                android:layout_gravity="center" />


                            <TextView
                                android:id = "@+id/xTvPrivacy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text = " Privacy Policy"
                                android:textSize="@dimen/registration_text_size"
                                android:textColor="@color/orange"
                                android:layout_gravity="center" />


                        </LinearLayout>




                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:id = "@+id/xTvSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text = "REGISTER NOW"
                    android:textSize="@dimen/cell_pri_textSize"
                    android:textColor="@color/white"
                    android:background="@drawable/button"
                    android:padding="@dimen/registration_text_size"
                    android:layout_margin = "@dimen/skip_margin"
                    android:layout_centerInParent="true"
                    android:gravity="center_horizontal"/>




            </LinearLayout>


        </LinearLayout>

</ScrollView>
