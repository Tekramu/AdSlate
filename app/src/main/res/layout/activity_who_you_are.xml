<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Who_You_Are_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/xRlActionBar1"
            android:background="@color/purple"
            android:padding="@dimen/image_padding">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/xIvBackButton"
                android:src="@drawable/ic_ad_slate_action_bar_back_black"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select who you are"
                android:textColor="@color/white"
                android:textSize="@dimen/header_text"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/text_margin_left"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help us identify if your an \nIndividual or Enterprise"
            android:id="@+id/xTvExcepture"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/skip_margin"
            android:textSize="@dimen/registration_text_size"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id = "@+id/xLinLaychosingType"
            android:gravity="center">

            <RelativeLayout
                android:id = "@+id/xRelLayIndividual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/help_margin">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_ad_slate_who_you_are_individual"
                    android:layout_centerVertical="true"
                    android:id="@+id/xIvIndividual"
                    android:layout_marginBottom="@dimen/skip_margin"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Individual"
                    android:layout_below="@+id/xIvIndividual"
                    android:layout_marginTop="@dimen/skip_margin"
                    android:textSize="@dimen/registration_text_size"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

            <View
                android:layout_width="@dimen/line_width"
                android:layout_height="match_parent"
                android:background="@color/divider"
                android:layout_toRightOf="@+id/xRlIndividual"
                android:layout_marginTop="@dimen/skip_margin"
                android:layout_gravity="center_vertical"/>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/xRlIndividual"
                android:layout_marginLeft="@dimen/help_margin"
                android:id="@+id/xRelLayEnterprise">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_ad_slate_who_you_are_enterprises"
                    android:layout_centerVertical="true"
                    android:id="@+id/xIvEnterprise"
                    android:layout_marginBottom="@dimen/skip_margin"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enterprise"
                    android:layout_marginTop="@dimen/skip_margin"
                    android:textSize="@dimen/registration_text_size"
                    android:layout_below="@+id/xIvEnterprise"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>


        </LinearLayout>

        <TextView
            android:id = "@+id/xTvRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "REGISTER NOW"
            android:textSize="@dimen/cell_pri_textSize"
            android:textColor="@color/white"
            android:background="@drawable/button"
            android:padding="@dimen/registration_text_size"
            android:layout_margin = "@dimen/help_margin"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"/>



    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_width"
            android:background="@color/divider"
            android:id="@+id/xVwLine" />


        <TextView
            android:id= "@+id/xTvLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:textColor="@color/orange"
            android:padding="@dimen/registration_text_size"
            android:textSize="@dimen/cell_pri_textSize"
            android:gravity="center_horizontal"
            android:layout_below="@+id/xVwLine"
            android:background="@color/button_grey"/>



</RelativeLayout>


</RelativeLayout>
