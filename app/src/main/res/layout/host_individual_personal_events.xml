<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="vertical">


            <TextView
                android:id="@+id/txteventType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:text="Event Type"
                android:textSize="@dimen/registration_text_size"/>

            <RadioGroup
                android:id="@+id/radioEventType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom ="@dimen/skip_margin">

                <RadioButton
                    android:id="@+id/radioMarriages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Marriages"
                    android:textSize="@dimen/header_text"
                    android:paddingTop="@dimen/margin_small"
                    android:paddingLeft="@dimen/margin_small"
                    android:button="@drawable/radiobutton_selector"/>

                <RadioButton
                    android:id="@+id/radioBirthdays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Birthdays"
                    android:textSize="@dimen/header_text"
                    android:paddingTop="@dimen/margin_small"
                    android:paddingLeft="@dimen/margin_small"
                    android:button="@drawable/radiobutton_selector"/>

                <RadioButton
                    android:id="@+id/radioBaby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Baby showers"
                    android:textSize="@dimen/header_text"
                    android:paddingLeft="@dimen/margin_small"
                    android:button="@drawable/radiobutton_selector"/>

            </RadioGroup>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/xTLayLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:hintTextAppearance="@style/flaotingtext"
            android:paddingBottom="@dimen/skip_margin">

            <EditText
                android:id="@+id/xEtLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext"
                android:hint="Location"
                android:singleLine="true"
                android:textSize="@dimen/registration_text_size"
                android:includeFontPadding="true"
                android:paddingTop="@dimen/margin_small"/>

        </android.support.design.widget.TextInputLayout>




    </LinearLayout>

</LinearLayout>