<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id = "@+id/xRelLayMenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple"
        android:orientation="vertical"
        android:padding="@dimen/margin_small">

        <com.adslate.helperclasses.RoundedImageView
            android:id = "@+id/xRIvProfilePic"
            android:layout_width="@dimen/profile_image_width"
            android:layout_height="@dimen/profile_image_height"
            android:layout_marginTop="@dimen/skip_margin"
            android:layout_marginLeft="@dimen/skip_margin"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/xRIvProfilePic"
            android:layout_margin="@dimen/margin_small">


            <TextView
                android:id = "@+id/xTvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "John AppleSeed"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/margin_small"
                android:textSize="@dimen/registration_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">


                <TextView
                    android:id = "@+id/xTvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "John@gmail.com"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/margin_small"
                    android:textSize="@dimen/registration_text_size"
                    android:gravity="center_vertical"/>


            </LinearLayout>


        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:id = "@+id/xLinLayHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_small">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src = "@drawable/ic_home"
                android:padding="@dimen/margin_small"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "Home"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/skip_margin"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/registration_text_size"/>


        </LinearLayout>


            <LinearLayout
                android:id = "@+id/xLinLayMyWallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_small">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src = "@drawable/ic_wallet"
                    android:padding="@dimen/margin_small"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "My Wallet"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/skip_margin"
                    android:textSize="@dimen/registration_text_size"
                    android:layout_gravity="center_vertical"/>


            </LinearLayout>



            <LinearLayout
                android:id = "@+id/xLinLayMyActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_small">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src = "@drawable/ic_activity"
                    android:padding="@dimen/margin_small"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "My Activity"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/skip_margin"
                    android:textSize="@dimen/registration_text_size"
                    android:layout_gravity="center_vertical"/>


            </LinearLayout>



            <LinearLayout
                android:id = "@+id/xLinLayNotifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_small">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src = "@drawable/ic_notifications"
                    android:padding="@dimen/margin_small"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "Notifications"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/skip_margin"
                    android:textSize="@dimen/registration_text_size"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/notification"
                    android:text = "6"
                    android:padding="@dimen/margin_small"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/help_margin"
                    android:layout_gravity="center_vertical" />


            </LinearLayout>




        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_width"
            android:background="@color/divider"/>


            <LinearLayout
                android:id = "@+id/xLinLayContractHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_small">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src = "@drawable/ic_history"
                    android:padding="@dimen/margin_small"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "Contract History"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/skip_margin"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/registration_text_size" />


            </LinearLayout>



            <LinearLayout
                android:id = "@+id/xLinLayRequestQuote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_small">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src = "@drawable/ic_quot"
                    android:padding="@dimen/margin_small"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "Request a Quote"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/skip_margin"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/registration_text_size" />


            </LinearLayout>


            <LinearLayout
                android:id = "@+id/xLinLaySettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_small">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src = "@drawable/ic_settings"
                    android:padding="@dimen/margin_small"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "Settings"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/skip_margin"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/registration_text_size" />


            </LinearLayout>



            <LinearLayout
                android:id = "@+id/xLinLayEditprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_small"
                android:layout_marginLeft="@dimen/help_margin">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src = "@drawable/ic_edit_profile"
                    android:padding="@dimen/margin_small"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "Edit Profile"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/skip_margin"
                    android:textSize="@dimen/registration_text_size"
                    android:layout_gravity="center_vertical"/>


            </LinearLayout>


            <LinearLayout
                android:id = "@+id/xLinLayReportAnIssue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_small"
                android:layout_marginLeft="@dimen/help_margin">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src = "@drawable/ic_report_on_issue"
                    android:padding="@dimen/margin_small"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "Report An Issue"
                    android:textSize="@dimen/registration_text_size"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/skip_margin"
                    android:layout_gravity="center_vertical"/>


            </LinearLayout>



            <LinearLayout
                android:id = "@+id/xLinLayLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_small">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src = "@drawable/ic_log_out"
                    android:padding="@dimen/margin_small"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "Logout"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/skip_margin"
                    android:textSize="@dimen/registration_text_size"
                    android:layout_gravity="center_vertical"/>


            </LinearLayout>


    </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>